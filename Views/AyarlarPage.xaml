<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odev3_Uygulama.Views.AyarlarPage"
             Title="Ayarlar">

    <StackLayout Padding="20" Spacing="20">
        <Label Text="Görünüm Ayarları" FontSize="20" FontAttributes="Bold"/>

        <HorizontalStackLayout Spacing="20">
            <Label Text="Koyu Tema (Dark Mode)" VerticalOptions="Center"/>

            <Switch x:Name="ThemeSwitch" Toggled="OnThemeSwitchToggled" />

        </HorizontalStackLayout>
    </StackLayout>
</ContentPage>