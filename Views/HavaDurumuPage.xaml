<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odev3_Uygulama.Views.HavaDurumuPage"
             Title="Hava Durumu">

    <Grid RowDefinitions="Auto,*">
        <HorizontalStackLayout Padding="10" Spacing="10">
            <Entry x:Name="txtSehir" Placeholder="Şehir Adı Girin (Örn: BARTIN)" WidthRequest="200"/>
            <Button Text="Ekle" Clicked="OnEkleClicked" BackgroundColor="#512BD4" TextColor="White"/>
            <Button Text="Yenile" Clicked="OnYenileClicked" BackgroundColor="Orange" TextColor="White"/>
        </HorizontalStackLayout>

        <CollectionView x:Name="lstHava" Grid.Row="1" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Margin="0,0,0,20">

                        <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,5">
                            <Label Text="{Binding SehirAd}" 
                                   FontSize="Large" 
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   TextColor="Black"/>

                            <Button Grid.Column="1"
                                    Text="-" 
                                    TextColor="White"
                                    BackgroundColor="Red"
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    HeightRequest="40"
                                    WidthRequest="40"
                                    CornerRadius="20"
                                    Clicked="OnSilClicked"
                                    CommandParameter="{Binding .}"/>
                        </Grid>

                        <WebView Source="{Binding ResimUrl}" HeightRequest="150" WidthRequest="400" HorizontalOptions="Start"/>

                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>